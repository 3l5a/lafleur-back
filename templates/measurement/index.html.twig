{% extends 'base.html.twig' %}

{% block title %}Measurement index
{% endblock %}

{% block body %}
	<h1>Measurement index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>N°</th>
				<th>Unité de mesure</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for measurement in measurements %}
				<tr>
					<td>{{ measurement.id }}</td>
					<td>{{ measurement.unitMeasurement }}</td>
					<td>
						<a href="{{ path('app_measurement_show', {'id': measurement.id}) }}">Voir</a>
						<a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">Éditer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Il n'y a pas de données à afficher</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_measurement_new') }}">Ajouter</a>
{% endblock %}
