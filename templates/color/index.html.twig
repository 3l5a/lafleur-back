{% extends 'base.html.twig' %}

{% block title %}Color index
{% endblock %}

{% block body %}
	<h1>Color index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>N°</th>
				<th>Nom</th>
				<th>Couleur</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for color in colors %}
				<tr>
					<td>{{ color.id }}</td>
					<td>{{ color.nameColor }}</td>
					<td>{{ color.codeColor }}</td>
					<td>
						<a href="{{ path('app_color_show', {'id': color.id}) }}">Voir</a>
						<a href="{{ path('app_color_edit', {'id': color.id}) }}">Éditer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Il n'y a pas de données à afficher</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_color_new') }}">Ajouter</a>
{% endblock %}
