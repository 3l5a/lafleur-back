{% extends 'base.html.twig' %}

{% block title %}Customer index
{% endblock %}

{% block body %}
	<h1>Customer index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>N°</th>
				<th>Prénom</th>
				<th>Nom</th>
				<th>Email</th>
				<th>Role</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for customer in customers %}
				<tr>
					<td>{{ customer.id }}</td>
					<td>{{ customer.firstNameCustomer }}</td>
					<td>{{ customer.lastNameCustomer }}</td>
					<td>{{ customer.emailCustomer }}</td>
					<td>{{ customer.role }}</td>
					<td>
						<a href="{{ path('app_customer_show', {'id': customer.id}) }}">Voir</a>
						<a href="{{ path('app_customer_edit', {'id': customer.id}) }}">Éditer</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">Il n'y a pas de données à afficher</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_customer_new') }}">Ajouter</a>
{% endblock %}
