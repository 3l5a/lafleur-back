{% extends 'base.html.twig' %}

{% block title %}Ville
{% endblock %}

{% block body %}
	<h1>City</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>N°</th>
				<td>{{ city.id }}</td>
			</tr>
			<tr>
				<th>Nom ville</th>
				<td>{{ city.nameCity }}</td>
			</tr>
			<tr>
				<th>Code postal</th>
				<td>{{ city.zipCodeCity }}</td>
			</tr>
			<tr>
				<th>Livrable</th>
				<td>{{ city.deliverable ? 'Oui' : 'Non' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_city_index') }}">Retour à la liste</a>

	<a href="{{ path('app_city_edit', {'id': city.id}) }}">Éditer</a>

	{{ include('city/_delete_form.html.twig') }}
{% endblock %}
