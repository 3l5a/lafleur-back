{% extends 'base.html.twig' %}

{% block title %}Fournisseur
{% endblock %}

{% block body %}
	<h1>Fournisseur</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>N°</th>
				<td>{{ supplier.id }}</td>
			</tr>
			<tr>
				<th>Nom société</th>
				<td>{{ supplier.nameSupplier }}</td>
			</tr>
			<tr>
				<th>Siret</th>
				<td>{{ supplier.siretSupplier }}</td>
			</tr>
			<tr>
				<th>Téléphone</th>
				<td>{{ supplier.phoneSupplier }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_supplier_index') }}">Retour à la liste</a>

	<a href="{{ path('app_supplier_edit', {'id': supplier.id}) }}">Éditer</a>

	{{ include('supplier/_delete_form.html.twig') }}
{% endblock %}
